<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.innerdatabasesqlite.MainActivity">
    <!---->
    <ImageView
        android:id="@+id/imgview_mark"
        android:layout_width="302dp"
        android:layout_height="197dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/imgview_mark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="4dp" />
    <!--아이디, 비밀번호-->
    <TextView
        android:id="@+id/text_id"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:text="아이디"
        android:textSize="20dp"
        android:layout_below="@id/imgview_mark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="222dp" />
    <TextView
        android:id="@+id/text_pw"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:text="비밀번호"
        android:textSize="20dp"
        android:layout_below="@id/text_id"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="273dp" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgview_mark"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="221dp" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_id"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="273dp" />

    <!--로그인-->
    <ImageButton
        android:id="@+id/imgbtn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/imgbtn_login"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:onClick="mOnClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="319dp" />

    <!--회원가입-->
    <ImageButton
        android:id="@+id/imgbtn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/imgbtn_join"
        android:layout_below="@id/imgbtn_login"
        android:layout_toStartOf="@+id/imgbtn_idfind"
        android:layout_marginRight="13dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="385dp"
        android:layout_toLeftOf="@+id/imgbtn_idfind" />

    <!--ID찾기-->
    <ImageButton
        android:id="@+id/imgbtn_idfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/imgbtn_pwfind"
        android:layout_below="@id/imgbtn_login"
        android:layout_alignEnd="@+id/imgbtn_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="385dp"
        android:layout_alignRight="@+id/imgbtn_login" />

    <ImageButton
        android:id="@+id/imgbtn_voice"
        android:layout_width="253dp"
        android:layout_height="259dp"
        android:padding="0dp"
        android:src="@drawable/imgbtn_voice"
        android:layout_below="@id/imgbtn_login"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="55dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="456dp" />
</RelativeLayout>
