<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디: "
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_id"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/text_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호: "
        android:textSize="15dp"
        android:layout_below="@+id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:layout_below="@+id/text_id"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/text_pw"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/edit_id" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_pw"
        android:layout_alignLeft="@+id/text_id"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_name"
        android:layout_alignBottom="@+id/text_name"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_name"
        android:layout_toRightOf="@+id/text_name"
        android:layout_alignRight="@+id/edit_id" />

    <TextView
        android:id="@+id/text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        />

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_age"
        android:layout_alignBottom="@+id/text_age"
        android:layout_toEndOf="@+id/text_age"
        android:layout_toRightOf="@+id/text_age"
        android:layout_alignEnd="@+id/edit_id"/>

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_age"
        android:layout_alignLeft="@+id/text_age"
        />
    <EditText
        android:id="@+id/edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_gender"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_gender"
        android:layout_toRightOf="@+id/text_gender"
        android:layout_alignRight="@+id/edit_id" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_gender"
        android:layout_alignLeft="@+id/text_id"
        />

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_address"
        android:layout_alignBottom="@+id/text_address"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_address"
        android:layout_toRightOf="@+id/text_address"
        android:layout_alignRight="@+id/edit_id" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_address"
        android:layout_alignLeft="@+id/text_id"
        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_email"
        android:layout_alignBottom="@+id/text_email"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_email"
        android:layout_toRightOf="@+id/text_email"
        android:layout_alignRight="@+id/edit_id" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰번호: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_email"
        android:layout_alignLeft="@+id/text_id"
        />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_phone"
        android:layout_alignBottom="@+id/text_phone"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_phone"
        android:layout_toRightOf="@+id/text_phone"
        android:layout_alignRight="@+id/edit_id" />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:layout_marginRight="12dp"
        android:background="#92D050"
        android:text="회원가입" />

    <ImageButton
        android:id="@+id/imgbtn_voice"
        android:layout_width="253dp"
        android:layout_height="259dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="450dp"
        android:padding="0dp"
        android:src="@drawable/imgbtn_voice"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="456dp" />

</RelativeLayout>